@model CompositeMVC.Application.Widgets.TwitterWidget
<script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
<script>
    new TWTR.Widget({
        version: 2,
        type: 'profile',
        rpp: 3,
        interval: 30000,
        width: 'auto',
        height: 300,
        theme: {
            shell: {
                background: '#ececec',
                color: '#000'
            },
            tweets: {
                background: '#ececec',
                color: '#474747',
                links: '#00ccdb'
            }
        },
        features: {
            scrollbar: false,
            loop: false,
            live: true,
            behavior: 'all'
        }
    }).render().setUser('@Model.Settings["handle"]').start();
</script>